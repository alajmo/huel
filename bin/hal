#!/usr/bin/env node

const pkg = require('../package.json');
require('please-upgrade-node')(pkg);
const program = require('commander');

program
  .version(pkg.version)
  .description('Development and build environment for the web')
  .command('build', 'build project').alias('b')
  .command('format', 'format files').alias('f')
  .command('lint', 'lint files').alias('l')
  .command('test', 'test code').alias('t')
  .command('commitmsg', 'assert commit message is in conventional commit form').alias('c')
  .command('changelog', 'generate changelog')
  .command('init', 'bootstrap project').alias('i')
  .on('--help', () => {
    console.log(`
  Examples:

    Build project
    $ hal build --lint src --format src -t src/index.html -e src/index.js -o dist/

    Lint files
    $ hal lint -s src/

    Format files
    $ hal format -s src/

    Run test suite
    $ hal test -s src/
  `);
  })
  .parse(process.argv);

if (!program.args.length) {
  program.help();
}

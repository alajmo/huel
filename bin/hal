#!/usr/bin/env node

const pkg = require('../package.json');
const program = require('commander');

const hej = { hej:1 }

program
  .version(pkg.version)
  .description('Development and build environment for the web')
  .command('build', 'build project').alias('b')
  .command('format', 'format files').alias('f')
  .command('lint', 'lint files').alias('l')
  .command('make', 'setup project').alias('m')
  .command('test', 'test code').alias('t')
  .on('--help', () => {
    console.log(`
  Examples:

    Build project
    $ hal build --lint src --format src -t src/index.html -e src/index.js -o dist/

    Lint files
    $ hal lint -s src/

    Format files
    $ hal format -s src/

    Run test suite
    $ hal test -s src/
  `);
  })
  .parse(process.argv);

if (!program.args.length) {
  program.help();
}

#!/usr/bin/env node

const defaultConfig = require('../config/default.json');
const program = require('commander');
const tasks = require('../src/tasks/tasks.js');

program
  .option('-s, --src <src>', `src for project. [string] [required]`)
  .option(
    '-w, --watch',
    `watch filesystem for changes. [boolean] [default: ${defaultConfig.watch}]`
  )
  .on('--help', () => {
    console.log(`
  Examples:

    One time run lint
    $ hal lint -s src/

    Watch files and run lint on file change
    $ hal lint -w -s src/
  `);
  })
  .parse(process.argv);

function getLintOptions(options) {
  if (!options.src) {
    throw new Error('error: option -s, --src with value is required');
  }

  return Object.freeze({
    src: options.src,
    watch: options.watch || defaultConfig.watch
  });
}

main();

function main() {
  const opt = getLintOptions(program);
  tasks.lint(opt);
}

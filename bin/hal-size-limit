#!/usr/bin/env node

const defaultConfig = require('../config/default.json');
const program = require('commander');
const tasks = require('../src/tasks/tasks.js');

program
  .option('-c, --config <config>', `path to custom config file. [string]`)
  .option(
    '-d, --dest <dest>',
    `output folder. [string] [default: ${defaultConfig.output}]`
  )
  .on('--help', () => {
    console.log(`
  `);
  })
  .parse(process.argv);

function getChangelogOptions(options) {
  return Object.freeze({
    dest: options.dest || defaultConfig.output
  });
}

main();

function main() {
  const opt = getChangelogOptions(program);
  tasks.startSizeLimit(opt);
}
